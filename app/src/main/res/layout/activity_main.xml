<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.ankush.bsbyhospitals.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
            android:id="@+id/b1"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:onClick="h1"
            android:text="AJMER"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="5dp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/b1"
            android:onClick="h2"
            android:text="JAIPUR"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="73dp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/b2"
            android:onClick="h3"
            android:text="PALI"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b4"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/b3"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/b3"
            android:onClick="h4"
            android:text="KOTA"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/b4"
            android:onClick="h5"
            android:text="JODHPUR"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/b5"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/b5"
            android:onClick="h6"
            android:text="BHILWARA"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b7"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/b6"
            android:onClick="h7"
            android:text="BIKANER"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/b7"
            android:onClick="h8"
            android:text="BUNDI"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/b8"
            android:onClick="h9"
            android:text="SIKAR"
            android:textSize="30sp" />

        <Button
                android:id="@+id/b10"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/b9"
                android:onClick="h10"
                android:text="DAUSA"
                android:textSize="30sp" />
            <Button
                android:id="@+id/b11"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/b10"
                android:onClick="h11"
                android:text="UDAIPUR"
                android:textSize="30sp" />
            <Button
                android:id="@+id/b12"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/b11"
                android:onClick="h12"
                android:text="TONK"
                android:textSize="30sp" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
